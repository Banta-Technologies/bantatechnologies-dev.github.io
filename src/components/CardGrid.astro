---
const { title, description } = Astro.props;
---

<section>
  {title ? <h2>{title}</h2> : ""}
  {description ? <p>{description}</p> : ""}
  <div class="flex flex-col md:flex-row columns-1 md:columns-2 lg:columns-3 gap-4 mb-4">
    <slot name="upper-row" />
  </div>
  <div class="flex flex-col md:flex-row columns-1 md:columns-2 lg:columns-3 gap-4">
    <slot name="lower-row" />
  </div>
</section>